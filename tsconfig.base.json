{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2018",
    "module": "esnext",
    "baseUrl": ".",
    "sourceMap": false,
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "removeComments": false,
    "rootDir": ".",
    "types": [],
    "paths": {
      "@apathia/*": ["packages/*"]
    }
  },
  "include": [
    "packages",
    "types",
  ]
}